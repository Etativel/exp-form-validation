<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <form action="/search" method="get">
      <input required type="text" placeholder="username" name="user" />
      <button type="submit">Find</button>
    </form>
    <form action="/search-user" method="get">
      <input required type="text" placeholder="username" name="user" />
      <button type="submit">DB Search</button>
    </form>
    <ul>
      <% if (locals.users) {%> <% users.forEach(user => { %>
      <li>
        <div class="display-container">
          <span> ID: <%= user.id %> </span>
          <span> Name: <%= user.firstName %> <%= user.lastName %> </span>
          <span> Email: <%= user.email%> </span>
          <span> Age: <%= user.age %> </span>
          <span> Bio: <%= user.bio %> </span>
        </div>
        <a href="/<%= user.id %>/update">Update</a>
        <form
          action="/<%= user.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this user?');"
          >
            Delete
          </button>
        </form>
      </li>

      <% }); %> <% } %>
    </ul>
    <a href="/create">Create a user</a>
  </body>
</html>
