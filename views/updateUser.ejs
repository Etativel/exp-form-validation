<!-- views/updateUser.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("partials/errors.ejs") %>
    <form
      action="/<%= user.id %>/update"
      method="POST"
      class="update-user-form"
    >
      <input
        type="text"
        name="firstName"
        value="<%= user.firstName %>"
        required
      />
      <input
        type="text"
        name="lastName"
        value="<%= user.lastName %>"
        required
      />
      <input
        type="email"
        name="email"
        value="<%= user.email%>"
        required
        placeholder="email"
      />
      <input
        type="number"
        name="age"
        value="<%= user.age %>"
        min="18"
        max="120"
        placeholder="age"
      />
      <textarea placeholder="bio" name="bio"><%= user.bio %></textarea>
      <button type="submit">Update User</button>
    </form>
    <a href="/">Back to home</a>
  </body>
</html>
